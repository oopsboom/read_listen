.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  border-top: 2rpx solid  #ccc;
  border-bottom: 2rpx solid #ccc;
  padding-bottom: 10rpx;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  width:60rpx;
  height: 60rpx;
}
.post-name{
  margin-left: 30rpx;
  font-size: 26rpx;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}
.post-content{
  color:#666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.post-like-image{

  margin-right: 16rpx;
}
.post-like-font{
  margin-right: 20rpx;
  font-size: 28rpx;
}