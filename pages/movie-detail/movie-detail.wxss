.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  filter: blur(20rpx);
  /* -webkit-filter: blur(20rpx); */
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx
}

.main-title {
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #ccc;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title {
  color: #1f3463;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.score-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.average {
  margin-left: 20rpx;
}

.hr {
  /* margin-top: 600rpx; */
  width: 100%;
  height: 2rpx;
  background-color: #d9d9d9;

}

.synopsis {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.synopsis-font {
  color: #999
}

.summary-content {
  margin: 20rpx 40rpx 20rpx 0rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.casts {
  display: flex;
  flex-direction: column;
  padding-top: 40rpx;
  margin-left: 40rpx;
}
.casts-font{
  color: #999;
}

.casts-container {
  height: 300rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 50rpx;
}

.cast-container {
 
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  
}
.cast-img {
  width: 170rpx;
  height: 210rpx;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}
