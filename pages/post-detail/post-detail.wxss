/* pages/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  /* height: 460rpx; */
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0 0 30rpx
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 20rpx;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #666;
}

.title {
  margin-left: 40rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.circle{
 float: right;
 vertical-align: middle;
}
.circle-img{
  width: 90rpx;
  height: 90rpx;
  margin-right: 40rpx;
}
.horizon{
  width: 660rpx;
  height: 2rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin:0 auto;
  z-index: -99;
}
.detail{
  color:#4b556c;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 32rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
